{% extends "layouts/dashboad.njk" %}

{% block page_action %}
<div class="nk-block-head nk-block-head-sm">
                                    <div class="nk-block-between">
                                        <div class="nk-block-head-content">
                                            <h3 class="nk-block-title page-title">Selectionner le Projet a planifier.</h3>
                                            <div class="nk-block-des text-soft">
                                                <p>Vous avez {{ projects| length}} projets..</p>
                                            </div>
                                        </div><!-- .nk-block-head-content -->
                                        <div class="nk-block-head-content">
                                            <input type="button" onclick="history.back()" value='<-- Back' class="btn btn-outline-light bg-white d-none d-sm-inline-flex">
                                            <input type="button" onclick="/web/dash/page" value="Back" class="btn btn-icon btn-outline-light bg-white d-inline-flex d-sm-none"><em class="icon ni ni-arrow-left"></em></input>
                                        </div>
                                    </div><!-- .nk-block-between -->
                                    
 </div><!-- .nk-block-head -->
{% endblock %}
{% block content %}
<div class="nk-content ">
    <div class="container-fluid">
        <div class="nk-content-inner">
            <div class="nk-content-body">
                <div class="nk-block-head nk-block-head-sm">
                    <div class="nk-block-between">
                        <div class="nk-block-head-content">
                            <h3 class="nk-block-title page-title"></h3>
                            <div class="nk-block-des text-soft">
                                <p></p>
                            </div>
                        </div><!-- .nk-block-head-content -->
                        
                    </div><!-- .nk-block-between -->
                </div><!-- .nk-block-head -->
                <div class="nk-block">
                    <div class="row g-gs">
                        {% for project in projects %}
                        <div class="col-sm-6 col-lg-4 col-xxl-3 ">
                            <div class="card card-bordered h-100">
                                <div class="card-inner ">
                                    <div class="project">
                                        <div class="project-head">
                                            <a href="/dash/planification/project/{{ project.idProjet}}" class="project-title">
                                                <div class="user-avatar sq bg-info"><span>Pr</span></div>
                                                <div class="project-info">
                                                    <h6 class="title">{{ project.nomProjet }}</h6>
                                                    <span class="sub-text">{{ project.nomClient }}</span>
                                                </div>
                                            </a>
                                            
                                        </div>
                                        <div class="project-details">
                                            <p>{{ project.libelle }}.</p>
                                        </div>
                                        <div class="project-progress">
                                            <div class="project-progress-details">
                                                <div class="project-progress-task"><em class="icon ni ni-check-round-cut"></em><span>0 Tasks</span></div>
                                                <div class="project-progress-percent">{{ project.progession }}%</div>
                                            </div>
                                            <div class="progress progress-pill progress-md bg-light">
                                                <div class="progress-bar" data-progress="{{ project.progession }}"></div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="project-meta">
                                        <span class="badge badge-dim badge-light text-gray"><em class="icon ni ni-clock"></em><span>{{ project.statut }}</span></span>
                                    </div>
                                </div>
                            </div>
                        </div>
