{% extends "layouts/dashboad.njk" %}

{% block page_action %}
<div class="nk-block-head nk-block-head-sm">
    <div class="nk-block-between">
        <div class="nk-block-head-content">
            <h3 class="nk-block-title page-title">Panning Projet.</h3>
            <div class="nk-block-des text-soft">
                <p>Vous avez {{ Tasks| length}} Taches..</p>
            </div>
        </div><!-- .nk-block-head-content -->
        <div class="nk-block-head-content">
            <a onclick="history.back()" class="btn btn-outline-light bg-white d-none d-sm-inline-flex"><em class="icon ni ni-arrow-left"></em><span>Back</span></a>
            <a href="#" class="btn btn-icon btn-outline-light bg-white d-inline-flex d-sm-none"><em class="icon ni ni-arrow-left"></em></a>
        </div>
    </div><!-- .nk-block-between -->
    
</div><!-- .nk-block-head -->
{% endblock %}


{% block content %}
<div class="nk-content ">
    <div class="container-fluid">
        <div class="nk-content-inner">
            <div class="nk-content-body">
                <!-- <div class="nk-block-head">
                    <div class="nk-block-between g-3">
                        <div class="nk-block-head-content">
                            <h3 class="nk-block-title page-title">Th√®me du Projet: <strong class="text-primary big">{{projet.nomProjet}}</strong></h3><br>
                            <h3 class="nk-block-title page-title">Libelle: <strong class="text-primary big">{{projet.libelle}}</strong></h3><br>
                            <h2 class="nk-block-title page-title">Date Butoir: <strong class="text-primary big">{{projet.dateFinProjet}}</strong></h2>
                            <div class="nk-block-des text-soft">
                                <ul class="list-inline">
                                    <li>Created At: <span class="text-base">18 Dec, 2019 01:02 PM</span></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div> -->

                <div class="nk-block">
                    <div class="invoice">
                        <div class="invoice-action">
                            <a class="btn btn-icon btn-lg btn-white btn-dim btn-outline-primary" href="/dash/printTask/{{projet.idProjet}}" target="_blank"><em class="icon ni ni-printer-fill"></em></a>
                        </div><!-- .invoice-actions -->
                        <div class="invoice-wrap">
                            <div class="invoice-brand text-center">
                                <h3 class="nk-block-title page-title">Projet de <strong class="text-primary big">{{projet.nomProjet}}</strong></h3><br>
                            </div>
                            <div class="invoice-head">
                                <div class="invoice-contact">
                                    <span class="overline-title">Livrer A</span>
                                    <div class="invoice-contact-info">
                                        <h4 class="title">Mr {{projet.nomClient}}</h4>
                                        <!-- <ul class="list-plain">
                                            <li><em class="icon ni ni-map-pin-fill"></em><span>House #65, 4328 Marion Street<br>Newbury, VT 05051</span></li>
                                            <li><em class="icon ni ni-call-fill"></em><span>+012 8764 556</span></li>
                                        </ul> -->
                                    </div>
                                    <span class="overline-title">Supervise par</span>
                                    <div class="invoice-contact-info">
                                        <h4 class="title">Mr {{user.name}}</h4>
                                    </div>
                                </div>
                                <div class="invoice-desc">
                                    <h3 class="title">DateLine</h3>
                                    <ul class="list-plain">
                                        <li class="invoice-date"><span>Date Fin</span>:<span>{{projet.dateFinProjet}}</span></li>
                                    </ul>
                                </div>
                            </div><!-- .invoice-head -->
                            <div class="invoice-bills">
                                <div class="table-responsive">
                                    <table class="table table-striped">
                                        <thead>
                                            <tr>
                                                <th class="w-50">Nom Tache</th>
                                                <th>Date Debut</th>
                                                <th>Date Fin</th>
                                                <th>Statut</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            {% for task in Tasks %}
                                            <tr>
                                                <td>{{task.nomTache}}: {{task.libelle}}</td>
                                                <td>{{task.dateDebut}}</td>
                                                <td>{{task.dateFin}}</td>
                                                <td>
                                                    <div class="progress progress-pill progress-md bg-light">
                                                        <div class="progress-bar" data-progress="{{ projet.progession }}"></div>
                                                    </div>{{ projet.progession }}%
                                                </td>
                                            </tr>
                                            {% endfor %}
                                        </tbody>
                                    </table>
                                    <div class="nk-notes ff-italic fs-12px text-soft"> Etat du projet {{projet.nomProjet}}. </div>
                                </div>
                            </div><!-- .invoice-bills -->
                        </div><!-- .invoice-wrap -->
                    </div><!-- .invoice -->
                </div><!-- .nk-block -->
            </div>
        </div>
    </div>
</div>                     
{% endblock %}