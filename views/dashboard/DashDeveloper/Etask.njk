{% block content %}

                    <div class="card card-preview">
                        <div class="card-inner">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th scope="col">Nom Tache</th>
                                        <th scope="col">Developpeur</th>
                                        <th scope="col">Statut</th>
                                        <th scope="col">Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for task in Tasks%}
                                    <tr>
                                        <th scope="row">{{task.nomTache}}</th>
                                        <td>{{task.id.name}}, {{task.id.telephone}}</td>
                                        {% if task.statut in 'En Cours' %}
                                        <td><p class="badge bg-warning">{{task.statut}}</p></td>
                                        {% elseif task.statut in 'En Attente' %}
                                        <td><p class="badge bg-danger">{{task.statut}}</p></td>
                                        {% elseif task.statut in 'termine' %}
                                        <td><p class="badge bg-success">{{task.statut}}</p></td>
                                        {% endif %}
                                        <td><center><a href="/dash/taski/{{task.idTache}}/{{user.uuid}}"  class="btn btn-dim btn-secondary"><span>Visualiser</span></a></center></td>
                                    </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
</div>

{% endblock %}