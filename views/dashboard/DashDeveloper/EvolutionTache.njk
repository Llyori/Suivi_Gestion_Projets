 </div><!-- .nk-block-head -->
{% endblock %}

{% block content %}

                    <div class="card card-preview">
                        <div class="card-inner">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th scope="col">Date</th>
                                        <th scope="col">Libelle</th>
                                        <th scope="col">DifficultÃ©s</th>
                                        <th scope="col">Besoin</th>
                                        <th scope="col">Commentaire</th>
                                        <th scope="col">Statut</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for etat in DetailTache %}
                                    {% if etat.statut not in 'En Attente' %}
                                    <tr>
                                        <th scope="row">{{etat.date}}</th>
                                        <td>{{etat.travailFait}}</td>
                                        <td>{{etat.difficulte}}</td>
                                        <td>{{etat.besoin}}</td>
                                        {% if etat.statut in 'rejete' %}
                                        <td class="badge-outline-danger">{{etat.commentaire}}</td>
                                        {% else %}
                                        <td></td>
                                        {% endif %}
                                        {% if etat.statut in 'En Cours' %}
                                        <td><p class="badge bg-warning">{{etat.statut}}</p></td>
                                        {% elseif etat.statut in 'termine' %}
                                        <td><p class="badge bg-success">{{etat.statut}}</p></td>
                                        {% elseif etat.statut in 'rejete' %}
                                        <td><p class="badge badge-outline-danger">{{etat.statut}}</p></td>
                                        {% endif %}
                                    </tr>
                                    {% endif %}
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
</div>

{% endblock %}